{
  "name": "saritasa-angular-boilerplate",
  "version": "0.0.0",
  "engines": {
    "node": "18.13.0"
  },
  "engineStrict": true,
  "volta": {
    "node": "18.13.0"
  },
  "scripts": {
    "start": "NG_APP_ENV=development ng serve --configuration development --project web",
    "start:prod": "NG_APP_ENV=production ng serve --configuration production --project web",
    "build": "npm run build:prod",
    "build:dev": "NG_APP_ENV=development ng build --configuration development --project web",
    "build:prod": "NG_APP_ENV=production ng build --configuration production --project web",
    "test": "ng test --no-watch",
    "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "coverage": "ng test --code-coverage --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "lint": "ng lint --cache && npm run stylelint && npm run prettier",
    "lint:fix": "ng lint --cache --fix && npm run stylelint:fix && npm run prettier:fix",
    "prepare": "husky install",
    "prettier": "prettier --check projects/**/*.{html,*css}",
    "prettier:fix": "prettier --write projects/**/*.{html,*css}",
    "stylelint": "stylelint projects/**/*.*css",
    "stylelint:fix": "stylelint --cache --fix projects/**/*.*css "
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.0.1",
    "@angular/cdk": "^16.0.1",
    "@angular/common": "^16.0.1",
    "@angular/compiler": "^16.0.1",
    "@angular/core": "^16.0.1",
    "@angular/forms": "^16.0.1",
    "@angular/material": "^16.0.1",
    "@angular/platform-browser": "^16.0.1",
    "@angular/platform-browser-dynamic": "^16.0.1",
    "@angular/router": "^16.0.1",
    "rxjs": "^7.8.0",
    "tslib": "^2.5.0",
    "zod": "^3.21.4",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.0.1",
    "@angular-eslint/builder": "^16.0.1",
    "@angular-eslint/eslint-plugin": "^16.0.1",
    "@angular-eslint/eslint-plugin-template": "^16.0.1",
    "@angular-eslint/schematics": "^16.0.1",
    "@angular-eslint/template-parser": "^16.0.1",
    "@angular/cli": "^16.0.1",
    "@angular/compiler-cli": "^16.0.1",
    "@ngneat/spectator": "^14.0.0",
    "@ngx-env/builder": "^16.0.0",
    "@saritasa/eslint-config-saritasa": "^2.1.4",
    "@types/jasmine": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-plugin-rxjs": "^5.0.3",
    "husky": "^8.0.3",
    "jasmine-core": "^4.6.0",
    "jasmine-marbles": "^0.9.2",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "lint-staged": "^13.2.2",
    "ng-packagr": "^16.0.1",
    "prettier": "^2.8.8",
    "stylelint": "^15.6.1",
    "stylelint-config-recommended-scss": "^11.0.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "projects/**/*.{ts,html}": "eslint --cache --fix",
    "projects/**/*.*css": "stylelint --cache --fix",
    "projects/**/*.{html,*css}": "prettier --write"
  }
}
